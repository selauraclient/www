---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
---

<Layout title="Selaura Client">
	<section class="flex flex-col items-center w-full gap-4">
		<p class="text-4xl text-bold text-center">Efficiency in motion</p>
		<p class="text-md text-center max-w-3xl font-normal">
			Selaura Client is a free, open-source utility client for Minecraft:
			Bedrock Edition. It is designed to be lightweight and efficient,
			providing a smooth and enjoyable gaming experience.
		</p>
		<div class="flex flex-row gap-4">
			<Button text="Try it Now" href="/download.html" />
			<Button text="Donate" icon="arrow-right" iconPosition="right" outline href="https://ko-fi.com/selauraclient" target="_blank" />
		</div>
		<br/>
		<div class="flex flex-row gap-4">
			<a href="/github/" target="_blank">
				<i class="fa-brands fa-github text-lg" />
			</a>
			<a href="/discord/" target="_blank">
				<i class="fa-brands fa-discord text-lg" />
			</a>
			<a href="/youtube/" target="_blank">
				<i class="fa-brands fa-youtube text-lg" />
			</a>
		</div>
		<div></div>
		<span
			class="flex w-full items-center justify-center max-w-full px-8 lg:max-w-none lg:flex-none lg:px-0"
		>
			<video
				class="flex w-fit mb-24 rounded-3xl shadow-md lg:mx-auto lg:w-3/4 dark:opacity-80 hover:scale-99 transition-all duration-300"
				preload="none"
				autoplay=""
				loop=""
				muted="true"
				playsinline=""
			>
				<source
					src="https://www.w3schools.com/html/mov_bbb.mp4"
					type="video/mp4"
				/>
			</video>
		</span>
	</section>
	<section class="flex flex-col items-center w-full gap-4">
		
	</section>
</Layout>
